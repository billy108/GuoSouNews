<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:background="#2CFF0000"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/iv_histroy_search_item"
        android:src="@drawable/search_history_sign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tv_histroy_item_content"
        android:text="1111111111"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/iv_histroy_search_item"
        android:layout_toEndOf="@+id/iv_histroy_search_item"
        android:layout_alignParentStart="false" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/search_choose"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/tv_histroy_item_content"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
