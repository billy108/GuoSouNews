<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/red"
    >

    <ImageView
        android:background="@drawable/umeng_back_btn"
        android:id="@+id/collect_back"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"/>

    <TextView
        android:text="收藏"
        android:textSize="22sp"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/edit"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:background="@drawable/header_right_icon_edit_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/header_2"
        android:layout_below="@id/header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/header_2_collect"
            android:text="收藏"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/header_2_histroy"
            android:text="历史"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_3"
        android:layout_below="@id/header_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp">

        <View
            android:id="@+id/header_view_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:background="@color/red"
            android:layout_height="2dp" />

        <View
            android:id="@+id/header_view_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@color/red"
            android:layout_height="2dp" />
    </LinearLayout>

</RelativeLayout>
