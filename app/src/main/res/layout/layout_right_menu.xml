<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/left_menu_bg">

    <ImageButton
        android:id="@+id/right_menu_refresh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/right_weather" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/right_menu_refresh"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/download_for_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:drawableTop="@drawable/download_for_offline"
            android:gravity="center"
            android:text="离线"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/righit_menu_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:drawableTop="@drawable/detail_fav_btn"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/right_menu_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/download_for_offline"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:drawableTop="@drawable/left_menu_search"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/right_menu_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/righit_menu_collect"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:drawableTop="@drawable/left_menu_settings"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/white" />
    </RelativeLayout>


</RelativeLayout>
