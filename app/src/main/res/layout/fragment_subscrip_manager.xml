<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/subscription_bg"
    >

    <RelativeLayout
        android:id="@+id/subscription_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        >

        <ImageView
            android:background="@drawable/umeng_back_btn"
            android:id="@+id/subscription_back"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="@string/subscription"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/left_subscription"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/subscription_header"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/right_subscription"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/subscription_header"
        android:layout_toEndOf="@id/left_subscription"
        android:layout_width="400dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>
